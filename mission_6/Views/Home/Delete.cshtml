@{
    ViewData["Title"] = "Delete Movie";
}

@model ApplicationResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for the Movie @Model.Title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button class="btn btn-primary" type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Waitlist" class="btn btn-secondary">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>
